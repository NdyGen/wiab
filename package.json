    "@types/homey": "npm:homey-apps-sdk-v3-types@^0.3.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^8.0.0",
    "jest": "^30.2.0",
    "playwright": "^1.57.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
