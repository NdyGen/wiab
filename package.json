{
  "name": "com.ndygen.wiab",
  "version": "1.0.0",
  "description": "Wasp in a Box - Virtual occupancy sensor for Homey",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
