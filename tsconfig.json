{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./.homeybuild",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "declaration": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "**/*.test.ts"
  ]
}
